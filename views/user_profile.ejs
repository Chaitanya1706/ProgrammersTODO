<link rel="stylesheet" href="/css/profile.css">

<section class="section about-section gray-bg" id="about">
    <div class="container">
        <div class="row align-items-center flex-row-reverse">
            <div class="col-lg-6">
                <div class="about-text go-to">
                    <h3 class="dark-color">
                        <%= profile_user.username %>
                    </h3>
                    <h6 class="theme-color lead">
                        <%= profile_user.education %>
                    </h6>
                    <p>I <mark>design and develop</mark> services for customers of all sizes, specializing in
                        creating stylish, modern websites, web services and online stores. My passion is to design
                        digital user experiences through the bold interface and meaningful interactions.</p>

                </div>
            </div>
            <div class="col-lg-6">
                <div class="about-avatar">
                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" title="" alt="">
                </div>
            </div>
        </div>
        <div class="counter">
            <div class="row">
                <div class="col-6 col-lg-3">
                    <div class="count-data text-center">
                        <h6 class="count h2" data-to="500" data-speed="500">
                            <p>TotalQuestion</p>
                        </h6>
                        <p class="m-0px font-w-600">Total Question</p>
                    </div>
                </div>
                <div class="col-6 col-lg-3">
                    <div class="count-data text-center">
                        <h6 class="count h2" data-to="150" data-speed="150">150</h6>
                        <p class="m-0px font-w-600">
                             Solved
                        </p>
                    </div>
                </div>
                <div class="col-6 col-lg-3">
                    <div class="count-data text-center">
                        <h6 class="count h2" data-to="850" data-speed="850">850</h6>
                        <p class="m-0px font-w-600">
                            unSolved
                        </p>
                    </div>
                </div>
                <div class="col-6 col-lg-3">
                    <div class="count-data text-center">
                        <h6 class="count h2" data-to="190" data-speed="190">190</h6>
                        <p class="m-0px font-w-600">
                            Redo 
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
