<link rel="stylesheet" href="/css/todo.css">



<div class="container mt-4">
    <div class="row card">
        <div class="card-block ">
            <div class="box box-aqua">
                <div class="box-header d-flex flex-row">
                    <div class="todo">
                        <i class="fa fa-clipboard"></i>
                        <h3 class="d-inline box-title">Today Task List</h3>
                    </div>
                    <span class="fw-bold link-primary">
                        <%= new Date().toDateString() %>
                    </span>
                    <div class="p-2">
                        <button class="btn btn-default text_blue btn-md">
                            <a id="pickrandom" class="text-decoration-none" target="_blank"
                                href="/questions/todo?q=randompick">
                                <i class="fas fa-random"></i>
                                Pick Random
                            </a>
                        </button>
                    </div>

                </div>
                <form action="/questions/todo/markdone" method="POST">
                    <div class="box-body">
                        <ul class="list-group list-group-numbered">

                            <% todo.forEach(function(item,i){%>
                                <li class="list-group-item list-group-item-secondary">

                                    <input class="form-check-input me-1" type="checkbox" id="todo-<%=i%>" name="mark[]"
                                        value="<%=item._id%>">
                                    <!-- <input type="checkbox" value="" name=""> -->
                                    <a href="<%=item.link%>" class="text">
                                        <%=item.name%>
                                    </a>
                                    <small
                                        class="badge <%- item.status=='UNSOLVED' ? 'bg-info' :item.status=='SOLVED' ? 'bg-success' : 'bg-danger'%>"><i
                                            class="far fa-clock"></i>
                                        <%= item.lastsolved ? moment(item.lastsolved).fromNow() : '--' %>
                                    </small>

                                </li>
                                <%})%>

                        </ul>
                    </div>


                    <% if (todo.length!=0) { %>

                        <div class="box-footer clearfix no-border">
                            <button type="submit" class="btn btn-default">MarkDone</button>
                            <!-- d-flex justify-content-around float-right -->
                        </div>%>


                        <%} else { %>

                            <div class="text_green_1 display-4  text-center"> No Work For Revision</div>
                            <% } %>


                </form>

            </div>
        </div>


    </div>
</div>