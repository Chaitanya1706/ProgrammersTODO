<link rel="stylesheet" href="/css/todo.css">



<div class="container mt-4">
    <div class="row card">

        <div class="card-block">

            <div class="box box-aqua">


                <div class="box-header ui-sortable-handle" style="cursor: move;">
                    <i class="fa fa-clipboard"></i>
                    <h3 class="d-inline box-title">To Do List</h3>
                    <p class="d-inline ml-5 text_green_1 badge bg-soft-success ">
                        <%= new Date().toDateString() %>
                    </p>


                </div>
                <form action="/questions/todo/markdone" method="POST">
                    <div class="box-body">
                        <ul class="todo-list ui-sortable">

                            <% todo.forEach(function(item,i){%>
                                <li>

                                    <input type="checkbox" id="todo-<%=i%>" name="mark[]" value="<%=item._id%>">
                                    <!-- <input type="checkbox" value="" name=""> -->
                                    <a href="<%=item.link%>" class="text">
                                        <%=item.name%>
                                    </a>
                                    <small
                                        class="badge <%- item.status=='UNSOLVED' ? 'bg-info' :item.status=='SOLVED' ? 'bg-success' : 'bg-danger'%>"><i
                                            class="far fa-clock"></i> 2 mins</small>

                                </li>
                                <%})%>

                        </ul>
                    </div>


                    <% if (todo.length!=0) { %>

                        <div class="box-footer clearfix no-border">
                            <button type="submit" class="btn btn-default">MarkDone</button>
                        </div>%>


                        <%} else { %>
                            <h3 class="text-center text_primary_special"> No Work To do </h3>
                            <% } %>

                </form>

            </div>
        </div>


    </div>
</div>