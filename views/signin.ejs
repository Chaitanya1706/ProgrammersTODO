<link rel="stylesheet" href="/css/login.css">

<div class="container">
    <!-- code here -->
    <div class="card mt-lg-2 mt-sm-1">
        <div class="card-image">
            <h2 class="card-heading">
                Get started
                <small>Lets get Started</small>
            </h2>
        </div>

        <form class="card-form" action="/users/create-session" method="post">
            <div class="input">

                <input autocomplete="false" readonly onfocus="this.removeAttribute('readonly');" type="email"
                    class="input-field" required name="email" id="email">


                <label class="input-label">Email</label>
            </div>
            <div class="input">


                <input autocomplete="false" readonly onfocus="this.removeAttribute('readonly');" type="password"
                    class="input-field" required name="password" id="password" minlength="5">


                <label class="input-label">Password</label>
            </div>

            <div class="action">
                <button class="action-button">Get started</button>
            </div>
        </form>


    </div>
    <div class="alert alert-warning" role="alert">
        <p>Email : guestuser@gmail.com</p>
        <p>Password: 12345</p>
    </div>
</div>

