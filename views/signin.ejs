<link rel="stylesheet" href="/css/login.css">

<div class="container">
    <!-- code here -->
    <div class="card mt-4">
        <div class="card-image">
            <h2 class="card-heading">
                Get started
                <small>Lets get Started</small>
            </h2>
        </div>


        <form id="loginForm" class="card-form" action="/users/create-session" method="post">
            <div class="input">

                <input autocomplete="false" readonly onfocus="this.removeAttribute('readonly');" type="email"
                    class="input-field" required name="email" id="email">

                <label class="input-label">Email</label>

            </div>


            <div class="input">


                <input autocomplete="false" readonly onfocus="this.removeAttribute('readonly');" type="password"
                    class="input-field" required name="password" id="password" minlength="5">


                <label class="input-label">Password</label>
            </div>

            <div class="action">
                <button type="button" class="btn btn-outline-primary my-2 w-100 btn-lg" onclick="guestLogin()">Guest
                    Login</button>

                <button type="submit" form="loginForm" class="action-button">Get started

                    <i class="fas fa-sign-in-alt"></i>
                </button>
            </div>
            <p>
                <a href="/users/auth/google">Google SignIn/SignOut</a>
            </p>
            <p class="text-muted mt-4 fw-bold">
                Don't have an account ?
                <a href="/users/signup" class=""> Register </a>
            </p>
        </form>

    </div>

</div>

<script src="/js/login.js"></script>
