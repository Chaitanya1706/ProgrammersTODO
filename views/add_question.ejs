<div class="container">
    <div class="row">



        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <h6 class="mb-2 text-primary">Add New Question </h6>
        </div>

        <form action="/questions/create" method="post" style="width: 100%;">

            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="form-group">
                    <label for="fullName">Question Name</label>
                    <input class="form-control" type="text" name="name" id="name" placeholder="Write question name"
                        required>
                </div>
            </div>
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="form-group">
                    <label for="eMail">Question Link</label>
                    <input class="form-control" type="url" name="link" id="link" placeholder="Add question link here.."
                        required>
                </div>
            </div>

            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="form-group">
                    <label for="eMail">Topic</label>
                    <input type="text" class="form-control" placeholder="Enter Category or Topic" name="topic">
                </div>
            </div>
            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                <div class="form-group">
                    <label for="status">Question Status </label>
                    <select class="form-control form-control-lg bg-white bg-op-9 ml-auto text-sm w-lg-50"
                        data-toggle="select" name="status" id="status">
                        <option value="SOLVED">SOLVED</option>
                        <option value="UNSOLVED">UNSOLVED</option>
                        <option value="RETRY">RETRY</option>
                    </select>
                </div>
            </div>

            <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                <div class="form-group">
                    <label for="deadline">Deadline </label>
                    <input type="date" class="form-control" id="deadline" name="deadline">

                </div>
            </div>

            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="form-group">
                    <label>Description (Optional)</label>
                    <textarea class="form-control" name="description" id="desc" rows="5"
                        placeholder="Question Description"></textarea>
                </div>
            </div>

            <div class="row">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <div class="text-center">
                        <input type="submit" value="Add Question" id="submit" name="submit" class="btn btn-primary">

                        <button type="reset" id="clear" name="clear" class="btn btn-secondary">
                            Cancel
                        </button>
                    </div>
                </div>
            </div>

        </form>
    </div>




</div>