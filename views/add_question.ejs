<link rel="stylesheet" href="/css/addquestion.css">
<div class="container mt-lg-3 mt-sm-2">
    <div class="row d-flex justify-content-center">
        <div class="col-lg-7 col-sm-11 card required">
            <div class="card-body">

                <form action="/questions/create" method="post" id="newQuestionForm">
                    <div class="col-md-12">
                        <label class="text-black-50" for="name">Question Name</label>

                        <input required class="form-control p-2" type="text" name="name" id="name"
                            placeholder="Write question name" required>
                    </div>
                    <div class="col-md-12  mb-3">

                        <label class="text-black-50" for="link">Question Link</label>

                        <input required class="form-control p-2" type="url" name="link" id="link"
                            placeholder="Add question link here.." required>
                    </div>
                    <div class="row  mb-3">
                        <div class="col-md-6">
                            <label for="status" class="text-black-50">Question Status </label>
                            <select id="status" class="form-select p-2" name="status" id="status">
                                <option value="SOLVED" selected>SOLVED</option>
                                <option value="UNSOLVED">UNSOLVED</option>
                                <option value="RETRY">RETRY</option>
                            </select>

                        </div>
                        <div class="col-md-6">
                            <label class="text-black-50" for="deadline">Revision Date</label>
                            <input required type="date" class="form-control p-2 datepicker" id="deadline"
                                name="deadline">
                            <small class="text-muted">Default revision date 20 days</small>
                        </div>
                    </div>

                    <div class="col-md-12  mb-3">
                        <label class="text-black-50" for="topic">Topic(Optional)</label>
                        <input type="text" id="topic" class="form-control p-2" placeholder="Enter Category or Topic"
                            name="topic">
                    </div>



                    <div class="col-md-12  mb-3">

                        <label class="text-black-50" for="desc">Description (Optional)</label>
                        <br>
                        <small class="text-muted"> <mark>*</mark>
                            Currently working on it</small>
                        <textarea readonly class="form-control p-2" name="description" id="desc" rows="1"
                            placeholder="Question Description"></textarea>

                    </div>


                    <div class="col-md-12">
                        <div class="text-center mt-5">
                            <input required type="submit" value="Add Question" id="submit" name="submit"
                                class="btn btn-primary">

                            <button type="reset" id="clear" name="clear" class="btn btn-secondary">
                                Clear
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>




</div>
<script src="/js/addquestion.js"></script>
<script src="/js/ajax/add_question.js"></script>